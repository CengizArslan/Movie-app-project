extends ../layout.pug

block content
  .row.justify-content-center
    .col-md-6
      .card
        .card-body
          h1.card-title.text-center.mb-4 Login
          
          if errors && errors.length > 0
            .alert.alert-danger
              each error in errors
                p.mb-0= error.msg
          
          form(method="POST", action="/login")
            .mb-3
              label.form-label(for="email") Email
              input.form-control(type="email", id="email", name="email", value=user ? user.email : "", required)
            
            .mb-3
              label.form-label(for="password") Password
              input.form-control(type="password", id="password", name="password", required)
            
            .d-grid.gap-2
              button.btn.btn-primary.btn-lg(type="submit") Login
              a.btn.btn-secondary(href="/register") Need an account? Register